{
  "name": "add-timeout-to-function",
  "type": "module",
  "version": "0.1.0",
  "homepage": "https://github.com/Jirei/add-timeout-to-function",
  "description": "Utility function to easily add timeout to any function returning a promise",
  "keywords": [
    "utility",
    "promise",
    "timeout",
    "async",
    "wait",
    "type-safe"
  ],
  "scripts": {
    "dev": "vite",
    "build": "vite build && tsc",
    "test": "vitest run",
    "test:watch": "vitest",
    "build-test": "npm run build && mkdir test-build && npm pack --pack-destination ./test-build && npm i -D ./test-build/add-timeout-to-function-* && vitest run add-timeout-to-function-build.test.ts && npm rm add-timeout-to-function",
    "lint": "eslint .",
    "format": "prettier --write .",
    "check-format": "prettier --check .",
    "prepare": "husky",
    "version-bump-patch": "npm version patch --commit-hooks=false --git-tag-version=false",
    "version-bump-minor": "npm version minor --commit-hooks=false --git-tag-version=false",
    "version-bump-major": "npm version major --commit-hooks=false --git-tag-version=false",
    "is-development-version-valid": "tsx ./scripts/is-development-version-valid.ts"
  },
  "main": "./dist/index.umd.cjs",
  "module": "./dist/index.js",
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.umd.cjs"
    }
  },
  "license": "MIT",
  "types": "./dist/index.d.ts",
  "devDependencies": {
    "@eslint/js": "8.57.0",
    "@types/eslint__js": "^8.42.3",
    "@types/lodash-es": "^4.17.12",
    "@types/node": "^20.12.11",
    "@types/semver": "^7.5.8",
    "@vitest/coverage-v8": "^1.6.0",
    "@vitest/ui": "^1.6.0",
    "eslint": "8.57.0",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.5",
    "lodash-es": "^4.17.21",
    "prettier": "3.2.5",
    "semver": "^7.6.2",
    "simple-git": "^3.24.0",
    "tsx": "^4.11.0",
    "typescript": "^5.4.5",
    "typescript-eslint": "^7.8.0",
    "vite": "^5.2.11",
    "vite-plugin-dts": "^3.9.1",
    "vite-tsconfig-paths": "^4.3.2",
    "vitest": "^1.6.0",
    "wait-util": "^0.1.1"
  }
}
